{
  "dataset_reader": {
    "name": "one_str_lm_reader",
    "data_path": "/home/anton/h-elmo/datasets/razvedopros.txt",
    "select": {
      "train": [1000, 10000],
      "valid": [100, 900],
      "test": [0, 100]
    }
  },
  "dataset_iterator": {
    "name": "one_str_lm_iterator",
    "seed": 1337,
    "shuffle": true
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "name": "char_lm_vocab",
        "id": "vocab",
        "save_path": "results/razvedopros/vocab.dict",
        "load_path": "results/razvedopros/vocab.dict",
        "fit_on": ["x", "y"],
        "in": ["x"],
        "out": ["x_ids"]
      },
      {
        "ref": "vocab",
        "in": ["y"],
        "out": ["y_ids"]
      },
      {
        "name": "lstm",
        "id": "lstm",
        "num_units": [250, 250],
        "projection_size": 50,
        "vocab_size": 11595,
        "learning_rate": 3e-04,
        "save_path": "results/razvedopros/model",
        "load_path": "results/razvedopros/model",
        "in": ["x_ids"],
        "in_y": ["y_ids"],
        "out": ["y_predicted_ids"]
      },
      {
        "ref": "vocab",
        "in": ["y_predicted_ids"],
        "out": ["y_predicted"]
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "log_every_n_batches": 100,
    "val_every_n_epochs":0,
    "batch_size": 64,
    "validation_patience": 0,
    "epochs": 20
  }
}
