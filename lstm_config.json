{
  "dataset_reader": {
    "name": "one_str_lm_reader",
    "data_path": "/home/anton/h-elmo/datasets/razvedopros.txt",
    "select": {
      "train": [10000, 40000],
      "valid": [2000, 8000],
      "test": [0, 2000]
    }
  },
  "dataset_iterator": {
    "name": "one_str_lm_iterator",
    "seed": 1337,
    "shuffle": false
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "name": "char_lm_vocab",
        "id": "vocab",
        "save_path": "results/razvedopros/vocab.dict",
        "load_path": "results/razvedopros/vocab.dict",
        "fit_on": ["x"],
        "in": ["x"],
        "out": ["x_ids"]
      },
      {
        "ref": "vocab",
        "in": ["y"],
        "out": ["y_ids"]
      },
      {
        "name": "lstm",
        "id": "lstm",
        "num_layers": 2,
        "num_units": [250, 250],
        "projection_size": 50,
        "vocab_size": "#vocab.len",
        "learning_rate": 3e-04,
        "save_path": "results/razvedopros/model",
        "load_path": "results/razvedopros/model",
        "in": ["x_ids"],
        "in_y": ["y_ids"],
        "out": ["y_predicted_ids"]
      },
      {
        "ref": "vocab",
        "in": ["y_predicted_ids"],
        "out": ["y_predicted"]
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "log_every_n_batches": 100,
    "val_every_n_epochs":1,
    "batch_size": [32, 30],
    "validation_patience": 0,
    "epochs": 20,
    "metrics": ["per_token_accuracy"]
  },
  "deeppavlov_root": "/home/anton/h-elmo/debug/lstm"
}
