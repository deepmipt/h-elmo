{
  "dataset_reader": {
    "name": "one_str_lm_reader",
    "data_path": "datasets/enwiki1G.txt",
    "select": {
      "train": [60000, 1000000],
      "valid": [50000, 10000],
      "test": [0, 50000]
    }
  },
  "dataset_iterator": {
    "name": "one_str_lm_iterator",
    "seed": 1,
    "shuffle": false,
    "num_unrollings": 100,
    "verbose": true
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "name": "char_lm_vocab",
        "id": "vocab",
        "save_path": "results/enwiki1G/vocab.dict",
        "load_path": "results/enwiki1G/vocab.dict",
        "fit_on": ["x"],
        "in": ["x"],
        "out": ["x_ids"]
      },
      {
        "ref": "vocab",
        "in": ["y"],
        "out": ["y_ids"]
      },
      {
        "name": "lstm",
        "id": "lstm",
        "num_layers": 2,
        "num_units": [1500, 1500],
        "projection_size": 150,
        "init_parameter": 3.0,
        "vocab_size": "#vocab.len",
        "learning_rate": 1e-3,
        "learning_rate_patience": 10,
        "save_path": "results/enwiki1G/model",
        "load_path": "results/enwiki1G/model",
        "in": ["x_ids"],
        "in_y": ["y_ids"],
        "out": ["y_predicted_ids"],
        "optimizer_type": "adam"
      },
      {
        "ref": "vocab",
        "in": ["y_predicted_ids"],
        "out": ["y_predicted"]
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "val_every_n_epochs": 1,
    "val_every_n_batches": 5000,
    "batch_size": 32,
    "validation_patience": 0,
    "epochs": -1,
    "metrics": ["per_token_accuracy"],
    "smooth_train": false
  },
  "deeppavlov_root": "debug/lstm"
}
